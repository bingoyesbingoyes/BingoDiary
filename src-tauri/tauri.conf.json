{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Bingo Diary",
  "version": "0.0.3",
  "identifier": "com.bingoyes.diary",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Bingo Diary",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "dragDropEnabled": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/**", "$DOCUMENT/**", "$PICTURE/**", "$DOWNLOAD/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": { "x": 130, "y": 280 },
        "applicationFolderPosition": { "x": 410, "y": 280 },
        "windowSize": { "width": 540, "height": 380 }
      },
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "nsis": {
        "headerImage": "icons/nsis-header.bmp",
        "sidebarImage": "icons/nsis-sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": true
      }
    },
    "shortDescription": "A lightweight diary app",
    "longDescription": "Bingo Diary - A beautiful and lightweight diary application with Markdown support, dark mode, and export features.",
    "category": "Productivity",
    "publisher": "BingoYes"
  }
}
